<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Asset</title>
    <style>
      body {
        background-color: #dd2476;
        font-family: "Lato", sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      main {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      form {
        background-color: white;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 15px;
        width: 100%;
        max-width: 1200px;
      }

      .form-group {
        display: flex;
        flex-direction: column;
      }

      label {
        margin-bottom: 5px;
        font-weight: bold;
      }

      input[type="text"],
      input[type="email"],
      input[type="date"] {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
      }

      .full-width {
        grid-column: span 3;
      }

      .new1 {
        display: flex;
        justify-content: center;
        grid-column: span 3;
      }

      button {
        background-color: #ff512f;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
      }

      button:hover {
        background-color: darkgreen;
      }

      @media (max-width: 900px) {
        form {
          grid-template-columns: 1fr 1fr;
        }

        .full-width {
          grid-column: span 2;
        }

        .new1 {
          grid-column: span 2;
        }
      }

      @media (max-width: 600px) {
        form {
          grid-template-columns: 1fr;
        }

        .full-width {
          grid-column: span 1;
        }

        .new1 {
          grid-column: span 1;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <form action="/edit-asset/<%= asset._id %>" method="post">
        <div class="form-group">
          <label for="Asset_Code">Asset Code</label>
          <input
            id="Asset_Code"
            type="text"
            name="Asset_Code"
            value="<%= asset.assetCode %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Asset_Status">Asset Status</label>
          <input
            id="Asset_Status"
            type="text"
            name="Asset_Status"
            value="<%= asset.assetStatus %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Unit_Name">Unit Name</label>
          <input
            id="Unit_Name"
            type="text"
            name="Unit_Name"
            value="<%= asset.unitName %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="SAP_FA_Id">SAP FA Id</label>
          <input
            id="SAP_FA_Id"
            type="text"
            name="SAP_FA_Id"
            value="<%= asset.sapFaId %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Device_Type">Device Type</label>
          <input
            id="Device_Type"
            type="text"
            name="Device_Type"
            value="<%= asset.deviceType %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Department">Department</label>
          <input
            id="Department"
            type="text"
            name="Department"
            value="<%= asset.department %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Designation">Designation</label>
          <input
            id="Designation"
            type="text"
            name="Designation"
            value="<%= asset.designation %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="User_Name">User Name</label>
          <input
            id="User_Name"
            type="text"
            name="User_Name"
            value="<%= asset.userName %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Mail_Id">Mail Id</label>
          <input
            id="Mail_Id"
            type="email"
            name="Mail_Id"
            value="<%= asset.mailId %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Location">Location</label>
          <input
            id="Location"
            type="text"
            name="Location"
            value="<%= asset.location %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Device_Make">Device Make</label>
          <input
            id="Device_Make"
            type="text"
            name="Device_Make"
            value="<%= asset.deviceMake %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Device_Model">Device Model</label>
          <input
            id="Device_Model"
            type="text"
            name="Device_Model"
            value="<%= asset.deviceModel %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Device_SN">Device S/N</label>
          <input
            id="Device_SN"
            type="text"
            name="Device_SN"
            value="<%= asset.deviceSn %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Processor">Processor</label>
          <input
            id="Processor"
            type="text"
            name="Processor"
            value="<%= asset.processor %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="RAM">RAM</label>
          <input
            id="RAM"
            type="text"
            name="RAM"
            value="<%= asset.ram %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="HDD">HDD</label>
          <input
            id="HDD"
            type="text"
            name="HDD"
            value="<%= asset.hdd %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="SDD">SDD</label>
          <input
            id="SDD"
            type="text"
            name="SDD"
            value="<%= asset.ssd %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="OS_Name_and_Version">OS Name and Version</label>
          <input
            id="OS_Name_and_Version"
            type="text"
            name="OS_Name_and_Version"
            value="<%= asset.osNameVersion %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="PO_No">PO No</label>
          <input
            id="PO_No"
            type="text"
            name="PO_No"
            value="<%= asset.poNo %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="PO_Date">PO Date</label>
          <input
            id="PO_Date"
            type="date"
            name="PO_Date"
            value="<%= asset.poDate %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Warranty_end_date">Warranty End Date</label>
          <input
            id="Warranty_end_date"
            type="date"
            name="Warranty_end_date"
            value="<%= asset.warrantyEndDate %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="Remark">Remark</label>
          <input
            id="Remark"
            type="text"
            name="Remark"
            value="<%= asset.remark %>"
            required
          />
        </div>

        <div class="new1">
          <button type="submit">Update</button>
        </div>
      </form>
    </main>
  </body>
</html>
